{
  "name": "portainer-desktop",
  "version": "1.3.3",
  "description": "Portainer PWA for desktop",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder -mwl"
  },
  "build": {
    "appId": "org.td-fl.portainer-desktop",
    "productName": "Portainer Desktop",
    "extraResources": [
      {
        "from": "build/icon.png",
        "to": "build/icon.png"
      }
    ],
    "dmg": {
      "contents": [
        {
          "x": 300,
          "y": 220
        },
        {
          "x": 600,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "iconTextSize": "14",
      "window": {
        "width": "900",
        "height": "455"
      }
    },
    "linux": {
      "maintainer": "Domen Jesenovec <domenjes@gmail.com>",
      "target": [
        "AppImage"
      ],
      "icon": "./build/icon.png",
      "category": "Utilities"
    }
  },
  "repository": "https://github.com/ExidCuter/portainer-desktop",
  "keywords": [
    "portainer",
    "PWA",
    "Deskop app"
  ],
  "author": "Domen Jesenovec",
  "license": "MIT",
  "devDependencies": {
    "electron": "^11.1.1",
    "electron-builder": "^22.9.1"
  },
  "dependencies": {
    "electron-alert": "^0.1.11",
    "electron-context-menu": "^2.3.0",
    "electron-default-menu": "^1.0.2",
    "electron-store": "^6.0.1",
    "sweetalert2": "^10.12.5"
  }
}
